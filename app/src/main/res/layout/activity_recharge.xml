<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myback"
    android:id="@+id/ll_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical">

    <include layout="@layout/activity_title"

        />

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/denglu"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="余额:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="2.336"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="20dp" />
    </LinearLayout>

    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/rl_recharge"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/denglu"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/shezhi"
            android:layout_alignParentRight="true"
            android:id="@+id/imageView" />

        <TextView
            android:layout_marginLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择充值方式"
            android:textSize="20dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:id="@+id/textView2" />
    </RelativeLayout>

        <EditText
            android:id="@+id/ed_money"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:background="@drawable/denglu"
            android:textSize="20dp"
            android:hint="请输入充值的金额"
            android:numeric="integer"
            android:textColor="#55ffffff"
            android:layout_height="55dp" />

<TextView
    android:layout_width="match_parent"
    android:text="订单金额尾数不能为0，请在充值金额后面增加不为0的数，列如49"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="3dp"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_queren"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:text="确认"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:background="@drawable/denglu"
        android:layout_marginTop="40dp"
        android:layout_height="55dp" />

</LinearLayout>